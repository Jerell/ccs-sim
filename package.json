{
  "name": "ccs-sim",
  "version": "1.0.1",
  "description": "Modelling CCS systems",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "test": "jest",
    "test:cov": "jest --coverage",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jerell/ccs-sim.git"
  },
  "keywords": [
    "ccs",
    "pipe",
    "co2"
  ],
  "author": "Jerell James <jerell1998@gmail.com> (https://jerell.me)",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Jerell/ccs-sim/issues"
  },
  "homepage": "https://github.com/Jerell/ccs-sim#readme",
  "devDependencies": {
    "@types/jest": "^26.0.24",
    "jest": "^27.0.6",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.3.5"
  },
  "files": [
    "lib/**/*"
  ],
  "jest": {
    "coverageDirectory": "./coverage/",
    "collectCoverage": true
  }
}
